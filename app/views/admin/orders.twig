{% extends 'admin/layout.twig' %}

{% block title %}[Admin] Orders{% endblock %}

{% block content %}
<table class="table">
    <caption>Orders list</caption>
    <thead>
    <tr>
        <th>Order ID</th>
        <th>User ID</th>
        <th>Order Date</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    {% for order in orders %}
            <tr>
                <td>
                    {{ order['id'] }}
                </td>
                <td>
                    {{ order['customer_id'] }}
                </td>
                <td>
                    {{ order['datetime'] }}
                </td>
                <td>
                    {{ order['completed'] }}
                </td>
            </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
